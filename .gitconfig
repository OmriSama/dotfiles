[user]
	name = Omri Gabay
	email = omri@omrigabay.me
[http]
	sslVerify = true
[pager]
	branch = false
[alias]
	lola = "log --graph --decorate --pretty=oneline --abbrev-commit --all"
	fap = fetch --all --prune
	pr = pull --rebase
	rom = rebase origin/master
[credential]
	helper = cache
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[core]
	autocrlf = input
[pull]
	rebase = true
